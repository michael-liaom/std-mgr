<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weijie.stdmgr">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 从SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="主菜单">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="用户登录" />
        <activity
            android:name=".AbsenceFormApplyActivity"
            android:label="日常信息" />
        <activity
            android:name=".RegistrationActivity"
            android:label="用户注册" />
        <activity
            android:name=".AbsenceFormListActivity"
            android:label="我的请假单" />
        <activity android:name=".SimpleDataPickerActivity" />
        <activity
            android:name=".StudentCourseActivity"
            android:label="课程列表"/>
        <activity
            android:name=".AbsenceFormCheckActivity"
            android:label="请假单详情"/>
        <activity
            android:name=".HostSettingActivity"
            android:label="服务器主机地址设定"/>
        <activity
            android:name=".CourseListActivity"
            android:label="课程列表"/>
        <activity
            android:name=".CourseStudentsActivity"
            android:label="授课学生列表"/>
        <activity
            android:name=".CourseDetailActivity"
            android:label="课程详情"/>
    </application>

</manifest>